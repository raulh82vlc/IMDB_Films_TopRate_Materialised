<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:background="@color/accent_translucent" >
    <ImageButton
        android:layout_width="@dimen/elements_spacing_img_small"
        android:layout_height="@dimen/elements_spacing_img_small"
        android:id="@+id/btnHide"
        android:layout_gravity="right"
        android:gravity="top|left"
        android:scaleType="centerCrop"
        android:src="@drawable/close"
        android:background="@android:color/holo_purple"
        android:elevation="@dimen/button_elevation_low"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/txtAuthorAppIntro" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Author"
        android:layout_marginTop="@dimen/elements_spacing_xlarge"
        android:textSize="@dimen/letter"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/txtAuthorApp" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Author"
        android:textSize="@dimen/letter_title"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/txtAuthorAppPreMail" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Author"
        android:textSize="@dimen/letter"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/txtAuthorAppMail" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Author"
        android:textSize="@dimen/letter_title"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_orange_dark"
        />
    <TextView
        android:id="@+id/txtTotalMoviesNow" android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="0"
        android:textSize="@dimen/letter"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/elements_spacing_xlarge"
        />
</LinearLayout>
