<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activities.RecyclerViewActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="?attr/actionBarSize"
        />

    <ImageButton
        android:id="@+id/imgWho"
        android:layout_gravity="bottom|left"
        android:src="@drawable/who"
        style="@style/WhoStyle"/>
    <ImageButton
        android:id="@+id/imgBtnFAB"
        android:layout_gravity="bottom|end"
        style="@style/RippleFabStyle"/>
    <ImageButton
        android:id="@+id/imgRetry"
        android:layout_gravity="bottom|end"
        android:visibility="gone"
        style="@style/RippleFabRetryStyle"/>

    <include layout="@layout/includes_toolbar_portion"/>

    <FrameLayout
        android:id="@+id/container_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical" ></FrameLayout>
</FrameLayout>
